// ----------------------------------------------
//borrowed stuff I like from bootstrap 4
// ----------------------------------------------

input, select, textarea {
  margin-top: 1em;
}

input {
  display: block;
  width: 100%;
  padding: .375rem .75rem;
  font-size: 1rem;
  line-height: 1.5;
  color: #55595c;
  background-color: #fff;
  background-image: none;
  border: 1px solid #ccc;
  border-radius: .25rem;
  box-sizing: border-box;
}

textarea {
  display: block;
  width: 100%;
  padding: .375rem .75rem;
  font-size: 1rem;
  line-height: 1.5;
  color: #55595c;
  background-color: #fff;
  background-image: none;
  border: 1px solid #ccc;
  border-radius: .25rem;
  box-sizing: border-box;
}

select {
  padding: .75rem 1.25rem;
  font-size: 1rem;
  line-height: 1.333333;
  border-radius: .3rem;
}

//todo use .btn like bootstrap?
button {
  display: inline-block;
  font-size: 14px;
  padding: 7px 24px;
  border-radius: 4px;
  color: #fff;
  border: 1px solid #e0f8ff;
  background-color: #213e8c;
  font-weight: 400;
  cursor: pointer;
  &:hover {
    background-color: #3059ca;
  }
}

.btn-block {
  width: 100%;
  display: block;
}
